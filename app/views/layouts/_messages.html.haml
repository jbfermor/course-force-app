- flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{
      :class => "alert 
      alert-#{name.to_s == 'notice' ? 'success' : 'danger'}
      alert-dismissible fade show",
      :role => "alert"}
      %button{
        "type" => "button",
        :class => "btn-close",
        "data-bs-dismiss" => "alert",
        "aria-label" => "Close"
        }
      = content_tag :div, msg, :id => "flash_#{name}"