.card 
  .card-header 
    .fa.fa-user 
    = link_to user.email, user_path(user)
  .card-footer
    Signed up 
    = time_ago_in_words(user.created_at) 
    ago 
    .row 
  .card-footer 
    sign in count: 
    = user.sign_in_count 
    .row
    current sign in at: 
    = user.current_sign_in_at 
    .row
    last sign in at: 
    = user.last_sign_in_at 
    .row
    current sign in ip: 
    = user.current_sign_in_ip
    .row 
    last sign in ip: 
    = user.last_sign_in_ip
  .card-footer 
    Confirmed email?
    - if user.confirmed_at.present?
      .badge.bg-success
        Yes 
    - else 
      .badge.bg-danger
        No
  .card-footer 
    - user.roles.each do |role|
      .badge.bg-info
        = role.name
    = link_to 'Edit roles', edit_user_path(user),
    class:'btn btn-sm btn-warning' if policy(user).edit?


